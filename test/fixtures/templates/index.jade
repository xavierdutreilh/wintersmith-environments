doctype html
html
  head
    meta(charset='utf-8')
    title=locals.name
    meta(name='author', content=locals.owner)
    link(href=contents['sample.css'].url, rel='stylesheet', type='text/css')
  body
    header
      h1=locals.name
      h2 Ignore
      ul
        for item in env.config.ignore
          li=item
      h2 Plugins
      ul
        for plugin in env.config.plugins
          li=plugin
    main
      h2=page.title
      !=page.html
    footer
      p &copy; #{locals.owner}
    script(src=contents['sample.js'].url)
